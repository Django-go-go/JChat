<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <TextView
        android:textSize="16sp"
        android:padding="6dp"
        android:id="@+id/tv_chat_msg_reverse"
        android:layout_toStartOf="@+id/img_chat_avatar_reverse"
        android:background="@drawable/shape_rect_pink"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/img_chat_msg_reverse"
        android:layout_toStartOf="@+id/img_chat_avatar_reverse"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/img_chat_avatar_reverse"
        android:layout_alignParentEnd="true"
        android:src="@drawable/default_useravatar"
        android:layout_width="48dp"
        android:layout_height="48dp"/>

</RelativeLayout>
