<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:orientation="vertical"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <RelativeLayout
        android:layout_marginBottom="40dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_set_avatar"
            android:layout_margin="6dp"
            android:src="@drawable/default_useravatar"
            android:layout_width="84dp"
            android:layout_height="84dp"/>

        <TextView
            android:id="@+id/tv_set_name"
            android:layout_margin="6dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/img_set_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <TextView
        android:text="当前状态:在线"
        android:padding="12dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginBottom="20dp"
        android:gravity="center_vertical"
        android:background="@drawable/shadow_square"
        android:id="@+id/btn_connect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="修改密码"
        android:padding="12dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:gravity="center_vertical"
        android:layout_marginBottom="20dp"
        android:background="@drawable/shadow_square"
        android:id="@+id/btn_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="清除缓存"
        android:padding="12dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:gravity="center_vertical"
        android:background="@drawable/shadow_square"
        android:id="@+id/btn_clearCache"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    
    <View
        android:background="@color/gray_light"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="12dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>


    <TextView
        android:layout_marginBottom="20dp"
        android:text="清除所有聊天记录"
        android:padding="12dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:gravity="center_vertical"
        android:background="@drawable/shadow_square"
        android:id="@+id/btn_clearChat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:textColor="@color/white"
        android:text="退出登录"
        android:layout_margin="20dp"
        android:background="@drawable/shape_rect_pink"
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
