<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                    android:layout_margin="5dp"
                                    android:elevation="5dp"
                                    card_view:cardCornerRadius="4dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_margin="4dp"
            android:id="@+id/img_avatar_newfriend"
            android:layout_centerVertical="true"
            android:src="@drawable/default_useravatar"
            android:layout_width="96dp"
            android:layout_height="96dp"/>

        <LinearLayout
            android:layout_margin="4dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/img_avatar_newfriend"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_name_newfriend"
                android:singleLine="true"
                android:layout_width="64dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="64dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <Button
            android:id="@+id/btn_newfriend"
            android:layout_margin="4dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/selector_rect"
            android:text="同意"
            android:textColor="@drawable/text_color"
            android:layout_width="48dp"
            android:layout_height="36dp"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>
